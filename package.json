{
  "name": "notion-slides",
  "version": "1.3.0",
  "description": "Present your Notion pages as simple, elegant, and secure slides",
  "main": "src/background/index.ts",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js && chrome-extension-cli dev",
    "watch": "nodemon --watch src --watch rollup.config.js --exec \"npm run build\"",
    "rollup": "rollup -c",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
    "clean": "rm -rf dist",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.ts",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.ts --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.ts --coverage",
    "tsc": "tsc --noEmit",
    "tsc:watch": "tsc --noEmit --watch"
  },
  "keywords": [
    "notion",
    "slides",
    "presentation",
    "chrome-extension"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-modules": "^0.1.6",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "glob": "^10.4.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "nodemon": "^3.0.1",
    "rollup": "^4.39.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  }
}
