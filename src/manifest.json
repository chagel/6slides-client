{
  "manifest_version": 3,
  "name": "Notion to Slides",
  "version": "1.1.0",
  "description": "Present your Notion pages as simple, elegant, and secure slides",
  "permissions": ["scripting", "activeTab", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.notion.so/*", 
        "https://*.notion.site/*",
        "https://github.com/*",
        "https://gitlab.com/*",
        "https://*/*/*.md",
        "https://*/*/*.markdown",
        "file://*/*.md",
        "file://*/*.markdown"
      ],
      "js": ["content/entry.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "viewer.html", 
        "lib/reveal.js/**", 
        "about.html", 
        "icons/**", 
        "controllers/viewer/index.js", 
        "icons/ui/**",
        "content/entry.js",
        "models/*.js",
        "models/extractors/*.js",
        "common/*.js",
        "settings-cache.json"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}